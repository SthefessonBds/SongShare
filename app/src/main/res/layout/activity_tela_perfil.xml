<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E6E6"
    tools:context=".Activity.TelaPerfil">

    <RelativeLayout
        android:id="@+id/cima"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="#FAFAFA">

        <RelativeLayout
            android:id="@+id/cabecalho"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/fundo_drawer"></FrameLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/foto_perfil_edit"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="130dp"
                android:src="@drawable/user" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cabecalho"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nome_perfil_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/user_perfil_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="user"
                android:textAlignment="center"
                android:textColor="#333"
                android:textSize="22sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Editar Perfil"
                android:textAllCaps="false" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/talentos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dados"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bio"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bio_perfil_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#222"
                android:textSize="16sp" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Talentos"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/talentos_perfil_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#222"
                android:textSize="16sp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Gêneros musicais favoritos"
                android:textColor="#000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/generos_perfil_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="-"
                android:textColor="#222"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/seguidores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/talentos"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="Seguidores"
                android:textColor="#000"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:text="Seguindo"
                android:textColor="#000"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seguidores"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/seguidores_perfil_edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/seguindo_perfil_edit"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:text="0"
                android:textAlignment="center"
                android:textSize="22sp" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/cima"
        android:layout_marginTop="20dp">


        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="0dp"
            android:background="@android:color/background_light"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/userlogin" />

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:paddingTop="20dp"
                    android:text="No que você está pensando?" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    app:srcCompat="@drawable/ic_camera_alt_black_24dp" />


            </LinearLayout>

        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nenhuma publicação"
            android:textSize="16sp"
            android:textAlignment="center"/>

    </RelativeLayout>


</RelativeLayout>